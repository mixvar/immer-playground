{
  "compilerOptions": {
    "rootDir": "src",
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "es2019"]
  }
}
